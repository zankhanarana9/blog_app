<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method='POST'>
        <div class="field">
            <label>Title</label>
            <textarea  name="blog[title]"><%= blog.title%></textarea>
        </div>
        
        <div class="field">
            <label>Image</label>
            <textarea  name="blog[image]"><%= blog.image%></textarea>
        </div>
        <div class="field">
            <label>Blog content</label>
            <textarea  name="blog[body]" ><%= blog.body%></textarea>
        </div>
        
        <input class="ui violet basic button"type="submit">
    </form>
</div>

<% include partials/footer %>